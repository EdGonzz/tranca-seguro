---
import "@/styles/global.css";
import "@/styles/toast.css";
import "@fontsource-variable/ubuntu-sans-mono";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Generador de contraseñas seguras y únicas. Cree contraseñas fuertes con opciones personalizables para proteger sus cuentas en línea." />
    <meta name="keywords" content="generador de contraseñas, contraseñas seguras, seguridad, password generator" />
    <meta name="author" content="Edwin Contreras" />
    <meta name="theme-color" content="#3b82f6" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Tranca Seguro - Generador de Contraseñas Seguras" />
    <meta property="og:description" content="Cree contraseñas fuertes y únicas para proteger sus cuentas en línea." />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Tranca Seguro - Generador de Contraseñas Seguras" />
    <meta name="twitter:description" content="Cree contraseñas fuertes y únicas para proteger sus cuentas en línea." />
    
    <title>Tranca Seguro - Generador de Contraseñas Seguras</title>
  </head>
  <body
    class="flex flex-col min-h-screen bg-background-light dark:bg-background-dark font-display text-slate-800 dark:text-slate-200"
  >
    <slot />
  </body>
</html>

<style>
  ::root {
    color-scheme: light dark;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Ubuntu Sans Variable", sans-serif;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
